<!-- User Profile -->
<div class="modal fade bd-example-modal-sm" id="profileModal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header justify-content-center">
                <div class="card">
                    <img id = "profile-image" class="card-img-top" src="" alt="Card image cap">
                    <div class="card-body modal-body">
                    <h5 class="modal-title" id="long-modal"></h5>
                    <p class="card-text" id="email"></p>
                </div>
                <ul id = "card-list" class="list-group list-group-flush">
                </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- New post Modal -->
<div class="modal fade" id="postModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Message</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <form action="/api/posts" id ="post-form" method="post">
        <div class="modal-body">
          <div class="form-group">
            <textarea name="body" class="form-control message-text" id="" placeholder="Tell us what's on your mind..."></textarea>
          </div>
        </div>
            
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button id="post" type="submit" class="btn btn-primary">Post</button>
        </div> 
      </form>
    </div>
  </div>
</div>

<!-- Edit Post Modal -->
  <div class="modal fade" id="updateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Update</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <form action="/api/posts" id ="edit-form" method="post">
          <div class="modal-body">
            <div class="form-group">
              <textarea name="body" class="form-control message-text" id="textValue"></textarea>
            </div> 
          </div> 

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary edit">Edit</button>
          </div>
        </form>

      </div>
    </div>
  </div>

  <!-- Edit User Modal -->
  <div class="modal fade" id="editUserModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Update User Info</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <form action="/api/users " id ="editUser-form" method="post">
          <div class="modal-body">
            <div class="form-group">
              <label>Username</label>
              <input type="text" name="username" class="form-control" id="editUsername">
              <label>Email</label>
              <input type="text" name="email" class="form-control" id="editEmail">
              <label>Image URL</label>
              <input type="text" name="imageURL" class="form-control" id="editImageURL">
            </div> 
          </div> 

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary editUserBtn">Edit Info</button>
          </div>
        </form>

      </div>
    </div>
  </div>

  <!-- Delete User Modal -->
  <div class="modal fade" id="deletePostModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Delete Post</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <div class="modal-body">
          Are you sure?
        </div> 

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
          <button type="submit" class="btn btn-primary confirmDeletePostBtn">Delete</button>
        </div>

      </div>
    </div>
  </div>
